<!-- Scaffolding generated by Casein v5.1.1.5 -->

<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= casein_sort_link "Name", :name %></th>
			<th><%= casein_sort_link "Email", :email %></th>
			<th><%= casein_sort_link "Designer email", :designer_email %></th>
			<th><%= casein_sort_link "Amount", :amount %></th>
			<th>Charge Customer</th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	
	<% customers.each do |customer| %>
		<tr>
			<td><%= casein_table_cell_link customer.name, casein_customer_path(customer) %></td>
			<td><%= casein_table_cell_link customer.email, casein_customer_path(customer) %></td>
			<td><%= casein_table_cell_link customer.designer_email, casein_customer_path(customer) %></td>
			<td><%= casein_table_cell_link customer.amount, casein_customer_path(customer) %></td>
			<td><%= link_to 'Charge Customer', customers_path, :class => "button get-started-submit-button checkout" %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_customer_path(customer), :method => :delete, :data => { :confirm => "Are you sure you want to delete this customer?" }) %>
			</td>
		</tr>
	<% end %>
</table>